<ViewpointsView>
  <Group Orientation="Vertical" Spacing="10px" Alignment="TopLeft" ContentAlignment="Left">
    <Label Text="{MenuHeader}" />
    <FlowList Orientation="Vertical" Items="{Viewpoints}"
              Width="600px" Height="480px" VerticalSpacing="10px"
              CanSelect="true" SelectionChanged="ViewpointChanged"
              HighlightedItemColor="Orange"
              SelectedItemColor="Red">
      <FlowListItem Width="550px" Id="Template" BackgroundColor="Gray80">
        <Label Text="{Item.Name}" />
      </FlowListItem>
    </FlowList>
  </Group>
</ViewpointsView>
