<CameraPathView>
  <Group Alignment="TopLeft" ContentAlignment="Left" Spacing="10px">
    <Group Orientation="Horizontal" Spacing="10px">
      <Label Text="Position" />
      <Slider Value="{Position}" Min="0.0" Max="1.0" />
    </Group>
    <Group Orientation="Horizontal" Spacing="10px">
      <Button Text="{ToggleButtonText}" Click="TogglePlay" />
      <Button Text="Reset" Click="ResetPath" />
    </Group>
    <Group Orientation="Horizontal" Spacing="10px">
      <Button Text="To Start" Click="FlyToStart" />
    </Group>
  </Group>
</CameraPathView>
