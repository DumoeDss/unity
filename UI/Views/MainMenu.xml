<MainMenu>

  <Region Width="20%" Alignment="Left"
      BackgroundColor="#838383">
    <Group Orientation="Vertical" Spacing="10px">
    <FlowList Style="Menu" Orientation="Vertical"
              Alignment="Top" Margin="10" Spacing="10px" Height="300px"
              SelectionChanged="SectionSelected" CanSelect="True" SelectedIndex="0">
      <FlowListItem Text="Viewpoints" Width="150px" Height="40px" />
      <FlowListItem Text="CameraPaths" Width="150px" Height="40px" />
      <FlowListItem Text="Visibilities" Width="150px" Height="40px" />
      <FlowListItem Text="Playables" Width="150px" Height="40px" />
      <FlowListItem Text="Options" Width="150px" Height="40px" />

    </FlowList>
    <Button Text="Close" Width="150px" Height="40px" Click="Close" />
    </Group>
  </Region>

  <Region Width="80%" Alignment="Right"
      BackgroundColor="#949494">
    <ViewSwitcher Id="ContentViewSwitcher" TransitionIn="FadeIn">
      <ViewpointsView Id="ViewpointsView" />
      <CameraPathsView Id="CameraPathsView" />
      <VisibilityView Id="VisibilitiesView" />
      <PlayablesView Id="PlayablesView" />
      <OptionsView Id="OptionsView" />
    </ViewSwitcher>
  </Region>

  <ViewAnimation Id="FadeIn">
    <Animate Field="Alpha" From="0" To="1" Duration="0.2s"
             EasingFunction="QuadraticEaseIn" />
  </ViewAnimation>

</MainMenu>
